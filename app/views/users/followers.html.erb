<div class="row">
  <div class="col-md-6 offset-md-3">
    <h1><%= @user.username %></h1>

    <ul class="nav nav-pills nav-justified">
      
      <li class="nav-item">
        <%= link_to "Posts", user_path(@user.username), class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Liked photos", liked_photos_path(@user.username), class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Feed", feed_photos_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Followers", followers_path, class: "nav-link active" %>
      </li>
      <li class="nav-item">
        <%= link_to "Following", following_path, class: "nav-link" %>
      </li>
    </ul>
  </div>
</div>

<%= current_user.accepted_received_follow_requests.count %>

<ul class="list-group">
  <% current_user.accepted_received_follow_requests.each do |person| %>
    <%= render "users/user_list", person: person %>
  <% end %>
</ul>